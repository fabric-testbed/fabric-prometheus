# Global
---
# Set ping targets for devices running on the rack.
# I am using h.split("-")[1] to get the device type by removing the first part which is the hank name
#   


{% for child in groups["renc_datacenter"] %}

  {% for h in child %}
- targets:
      - {{hostvars[h].ansible_host}}
  labels:
      job: ping
      
      release: {{ parts[0] }}
      sub_domain: {{h}}
  {% endfor %}


{% endfor %}




{% for child in groups[renc_datacenter] %}

  {% for h in child %}
- targets:
      - {{hostvars[h].ansible_host}}
  labels:
      job: ping
      {% parts = h.split{"_"} %}
      release: {{ parts[2] }}
      sub_domain: {{h}}

  {% endfor %}


{% endfor %}


